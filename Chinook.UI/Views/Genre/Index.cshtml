@model IEnumerable<Chinook.Domain.Entities.Genre>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div ng-controller="genreIndexCtrl as vm">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>


        <tr ng-repeat="item in vm.pagableResults.Results">
            <td>
                <a href="/genre/Edit/{{item.GenreId}}">{{item.Name}}</a>
            </td>
            <td style="width: 50px;">

                <a href="" ng-click="vm.deleteGenre(item.GenreId)"><i class="fa fa-trash-o"></i></a>
            </td>
        </tr>
    </table>
    <pagination total-items="vm.pagableResults.TotalCount" items-per-page="vm.pageSize" ng-model="vm.currentPage" ng-change="vm.pageChanged()" max-size="10" class="pagination-sm" boundary-links="true"></pagination>
</div>
@section Scripts {
    <script src="~/app/genre/index.js"></script>
    <script src="~/app/services/genreDataService.js"></script>
}