@model IEnumerable<Chinook.Domain.Entities.Employee>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div ng-controller="employeeIndexCtrl as vm">
    <table class="table">
        <tr>
            <th>
                FirstName   
            </th>
            <th>
                LastName
            </th>
            <th>
                Title
            </th>
            <th>
                City
            </th>
            <th>
                State
            </th>
            <th>
                Country
            </th>
            <th>
                PostalCode
            </th>
            <th></th>
        </tr>

       
        <tr ng-repeat="item in vm.pagableResults.Results">
            <td>
                <a href="/Employee/Edit/{{item.EmployeeId}}">{{item.FirstName}}</a>
                
            </td>
            <td>
              
                {{item.FirstName}}
            </td>
            <td>
                {{item.Title}}
            </td>

            <td>
                {{item.City}}
            </td>
            <td>
                {{item.State}}
            </td>
            <td>
                {{item.Country}}
            </td>
            <td>
                {{item.PostalCode}}
            </td>
            
            <td>
                <a href="" ng-click="vm.deleteAlbum(item.AlbumId)"><i class="fa fa-trash-o"></i></a>
            </td>
        </tr>
    </table>
    <pagination total-items="vm.pagableResults.TotalCount" items-per-page="vm.pageSize" ng-model="vm.currentPage" ng-change="vm.pageChanged()" max-size="10" class="pagination-sm" boundary-links="true"></pagination>
</div>
@section Scripts {
    <script src="~/app/employee/index.js"></script>
    <script src="~/app/services/employeeDataService.js"></script>
}
